import Portfolio from "../components/Portfolio.astro";
---

<BaseLayout title="Portfolio | Главная">
    <main class="index">
        <section class="index__begin">
            <div class="begin">
                <img class="begin__image"
                     src="images/content/begin/bg.png"
                     width="1920px"
                     height="955px"
                     loading="lazy"
                     alt=""
                >
                <div class="begin__wrap">
                    <div class="container">
                        <div class="begin__quote">Portfolio</div>
