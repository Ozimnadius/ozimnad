---
import Navigation from './Navigation.astro';
import Socials from "./Socials.astro";
---

<header class="header">
    <div class="container">
        <button class="header__mmenu" type="button">
            <svg viewBox="0 -53 384 384" xmlns="http://www.w3.org/2000/svg">
                <path d="m368 154.667969h-352c-8.832031 0-16-7.167969-16-16s7.167969-16 16-16h352c8.832031 0 16 7.167969 16 16s-7.167969 16-16 16zm0 0"/>
                <path d="m368 32h-352c-8.832031 0-16-7.167969-16-16s7.167969-16 16-16h352c8.832031 0 16 7.167969 16 16s-7.167969 16-16 16zm0 0"/>
                <path d="m368 277.332031h-352c-8.832031 0-16-7.167969-16-16s7.167969-16 16-16h352c8.832031 0 16 7.167969 16 16s-7.167969 16-16 16zm0 0"/>
            </svg>
        </button>
        <div class="header__title">Begin.</div>
        <div class="header__nav">
            <button class="header__nav-close" type="button">
                <svg viewBox="0 0 329.26933 329" xmlns="http://www.w3.org/2000/svg">
                    <path d="m194.800781 164.769531 128.210938-128.214843c8.34375-8.339844 8.34375-21.824219 0-30.164063-8.339844-8.339844-21.824219-8.339844-30.164063 0l-128.214844 128.214844-128.210937-128.214844c-8.34375-8.339844-21.824219-8.339844-30.164063 0-8.34375 8.339844-8.34375 21.824219 0 30.164063l128.210938 128.214843-128.210938 128.214844c-8.34375 8.339844-8.34375 21.824219 0 30.164063 4.15625 4.160156 9.621094 6.25 15.082032 6.25 5.460937 0 10.921875-2.089844 15.082031-6.25l128.210937-128.214844 128.214844 128.214844c4.160156 4.160156 9.621094 6.25 15.082032 6.25 5.460937 0 10.921874-2.089844 15.082031-6.25 8.34375-8.339844 8.34375-21.824219 0-30.164063zm0 0"/>
                </svg>
            </button>
            <Navigation/>
        </div>
        <div class="header__contacts">
            <Socials/>
        </div>
    </div>
</header>

<script>
    const mmenuBtn = document.querySelector('.header__mmenu'),
        mmenu = document.querySelector('.header__nav');
    mmenuBtn.addEventListener('click', function (e){
        mmenu.classList.add('open');
    });
    mmenu.addEventListener('click', function (e){
        let target = e.target;
        if (!target.classList.contains('nav__item')){
            this.classList.remove('open');
        }
    });
</script>
